<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="StyleableToast">
        <attr name="dtTextBold" format="boolean" />
        <attr name="dtTextColor" format="color" />
        <attr name="dtFont" format="reference" />
        <attr name="dtTextSize" format="dimension" />
        <attr name="dtTitleTextBold" format="boolean" />
        <attr name="dtTitleTextColor" format="color" />
        <attr name="dtLineViewColor" format="color" />
        <attr name="dtTitleFont" format="reference" />
        <attr name="dtTitleTextSize" format="dimension" />
        <attr name="dtColorBackground" format="color" />
        <attr name="dtSolidBackground" format="boolean" />
        <attr name="dtRadius" format="dimension" />
        <attr name="dtStrokeWidth" format="dimension" />
        <attr name="dtStrokeColor" format="color" />
        <attr name="dtIconStart" format="reference" />
        <!--<attr name="dtIconEnd" format="reference" />-->
        <attr name="dtLength" format="integer">
            <enum name="LONG" value="1" />
            <enum name="SHORT" value="0" />
        </attr>
        <attr name="dtGravity" format="integer">
            <enum name="center" value="1" />
            <enum name="top" value="2" />
        </attr>

    </declare-styleable>
</resources>
